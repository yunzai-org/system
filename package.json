{
  "name": "yz-system",
  "version": "1.0.5",
  "author": "ningmengchongshui",
  "description": "yz-system",
  "type": "module",
  "scripts": {
    "app": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/main.js",
    "dev": "nodemon",
    "start": "pm2 startOrRestart pm2.config.cjs",
    "stop": "pm2 stop pm2.config.cjs",
    "delete": "pm2 delete pm2.config.cjs",
    "kill": "pm2 kill",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "img": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts",
    "build": "rollup  --config rollup.config.js",
    "format": "prettier --write ."
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "moment": "^2.30.1",
    "react-puppeteer": "^1.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.8.5",
    "@types/node-schedule": "^2.1.7",
    "prettier": "^3.0.3",
    "rollup": "^4.16.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "yunzai": "^1.0.1-rc.2"
  },
  "files": [
    "public/css",
    "public/img",
    "public/yaml",
    "lib"
  ],
  "types": "lib/types",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "keywords": [
    "yunzai"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}
